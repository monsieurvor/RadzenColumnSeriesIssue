@page "/"
<PageTitle>RadzenColumnIssue</PageTitle>

<RadzenButton Click="ShowIssue" Text="Toggle Issue" ButtonStyle="ButtonStyle.Primary" />

<RadzenChart @ref=issueChart>
    <RadzenColumnSeries Data="@DataItems" Title="Test" CategoryProperty="Quarter" ValueProperty="Earnings" Fill="red" />

    <RadzenColumnOptions Radius="@radius" />

    <RadzenCategoryAxis />

    <RadzenValueAxis>
        <RadzenGridLines Visible=true />
    </RadzenValueAxis>

    <RadzenLegend Visible=false />
</RadzenChart>

@code {
    RadzenChart? issueChart;
    int radius = 0;

    class DataItem
    {
        public string Quarter { get; set; }
        public double Earnings { get; set; }
    }
    DataItem[] DataItems = new DataItem[] {
        new DataItem
        {
            Quarter = "Q1",
            Earnings = 0
        },
        new DataItem
        {
            Quarter = "Q2",
            Earnings = 2000
        },
        new DataItem
        {
            Quarter = "Q3",
            Earnings = -30
        },
        new DataItem
        {
            Quarter = "Q4",
            Earnings = 200
        }
    };
    void ShowIssue()
    {
        radius = radius == 0 ? radius = 10 : radius = 0;
        issueChart?.Reload();
    }
}
